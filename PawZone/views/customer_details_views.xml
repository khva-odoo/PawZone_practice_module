<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="customer_details_form" model="ir.ui.view">
            <field name="name">customer.details.views.form</field>
            <field name="model">customer.details</field>
            <field name="arch" type="xml">
                <form string="Customer Details">
                    <sheet>
                        <label for="name"/>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <h1>
                            <field name="name" placeholder="Tom Peterson"/>                                                   
                        </h1>
                                                    
                        <group string="Address details">
                            <group colspan="2">
                            <field name="address" string="Address"/>
                            </group>
                            <group>
                                <field name="city"/>
                                <field name="state"/> 
                            </group>
                            <group>                                                                  
                                <field name="country"/>
                                <field name="pincode"/>
                            </group>
                        </group>
                        <group string="Personal Details">
                            <field name="email_id"/>
                            <field name="phone_number"/>
                        </group>                            
                    </sheet>
                </form>
        </field>
    </record>



 <record id="customer_details_view_tree" model="ir.ui.view">
        <field name="name">customer.details.view.tree</field>
        <field name="model">customer.details</field>
        <field name="arch" type="xml">
            <tree string="Customer Details">
                <field name="name"/>
                <field name="email_id"/>               
                <field name="city"/>
                <field name="state"/>
                <field name="country"/>                
            </tree>
        </field>
    </record>




    <record id="customer_details_action" model="ir.actions.act_window">
        <field name="name">Customer Details</field>
        <field name="res_model">customer.details</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>